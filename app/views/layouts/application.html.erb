<!DOCTYPE html>
<html>
  <head>
    <title>Jefflix</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type='text/javascript'>
      window.splashLogo = "<%= image_url('splashlogo.png')%>"
      window.splashbg = "<%= image_url('splashbg.jpg')%>"
      window.browselogo = "<%= image_url('browselogo.png')%>"
      window.profilepic = "<%= image_url('profilepic.png')%>"
      window.flashgordonimg = "<%= image_url('flashgordon.png')%>"
    </script>
    
    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email %>"
        };
      </script>
    <% end %>

    <meta property="og:title" content="Jefflix" />
     <meta property='og:image' content="<%= image_url('splashlogo.png') %>"/>
     <meta property="og:description"
       content="A clone of Netflix that allows users to browse films, and add films to their watch list."
     />
     <meta property="og:url"
       content="https://jefflixfsp.herokuapp.com/"
     />

  </head>

  <body>
    <%= yield %>
  </body>
</html>
