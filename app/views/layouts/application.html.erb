<!DOCTYPE html>
<html>
  <head>
    <title>Jefflix</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type='text/javascript'>
      window.splashLogo = "<%= image_url('splashlogo.png')%>"
      window.splashbg = "<%= image_url('splashbg.jpg')%>"
      window.browselogo = "<%= image_url('browselogo.png')%>"
      window.profilepic = "<%= image_url('profilepic.png')%>"
      window.thepest = "<%= image_url('thepest.jpg')%>"
      window.kindergartencop = "<%= image_url('kindergartencop.jpg')%>"
      window.surfninjas = "<%= image_url('surfninjas.jpg')%>"
      
    </script>
    
    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email %>"
        };
      </script>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
